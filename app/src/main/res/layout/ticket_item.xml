<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ticket ID -->
        <TextView
            android:id="@+id/ticketIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket ID"
            android:textSize="16sp"
            android:fontFamily="@font/poppinsbold" />

        <!-- Ticket Description -->
        <TextView
            android:id="@+id/ticketDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticket Description"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsregular" />

        <!-- Name Fields in One Line -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:columnCount="3">

            <TextView
                android:id="@+id/firstNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsregular"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="2dp"
                android:maxWidth="80dp"
                android:layout_columnWeight="1"/>

            <TextView
                android:id="@+id/lastNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="2dp"
                android:maxWidth="80dp"
                android:layout_columnWeight="1"/> <!-- Add margin for spacing -->

            <TextView
                android:id="@+id/middleNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Middle Name"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsregular"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="2dp"
                android:maxWidth="50dp"
                android:layout_columnWeight="1"/> <!-- Add margin for spacing -->

        </GridLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
