<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeTicketer">

    <TextView
        android:id="@+id/titletextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:elevation="5dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:layout_marginTop="70dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Profile Picture Section -->
                    <ImageView
                        android:id="@+id/user_image"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        android:contentDescription="User Profile Picture"
                        android:src="@drawable/ic_user_placeholder" />

                    <!-- Single Column of TextViews -->
                    <TextView
                        android:id="@+id/fnametxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="First Name"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/lnametxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Last Name"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/mitxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Middle Initial"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/sextxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Sex"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="1"
                        android:ellipsize="end"/>


                    <TextView
                        android:id="@+id/DateOfBirthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Birthday"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/emailtxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Email"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/DriverLicenseNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Driver License No"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <TextView
                        android:id="@+id/Nationality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Nationality"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="1"
                        android:ellipsize="end"/>


                    <TextView
                        android:id="@+id/PresentAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Present Address"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                    <!-- Buttons Section -->

                    <Button
                        android:id="@+id/buttonEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/navy_blue"
                        android:drawableLeft="@drawable/baseline_person_24white"
                        android:drawablePadding="8dp"
                        android:text="Edit Profile"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppinsbold"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                    <Button
                        android:id="@+id/buttonEditPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="@color/navy_blue"
                        android:drawableLeft="@drawable/baseline_lock_24white"
                        android:drawablePadding="8dp"
                        android:text="Edit Password"
                        android:textColor="@color/white"
                        android:textSize="11sp"
                        android:fontFamily="@font/poppinsbold"
                        android:maxLines="1"
                        android:ellipsize="end"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/activity_main_content" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/user_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
